DEFAULT[mini_module("parse/rapc.mini")]

scope("mpc";) do
	let MPC := file("mpc/mpc.c") => fun() do
		file("mpc"):rmdir
		execute("git clone https://github.com/orangeduck/mpc.git")
		execute("cat", file("mpc_extra.c"), " >> ", "mpc/mpc.c")
	end
	PREBUILDS := old + [MPC]
	DEFAULT[so_module("parse/mpc.so", [file("mpc.o"), file("mpc/mpc.o")])]
end